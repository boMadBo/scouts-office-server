{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.+)$": "<rootDir>/../src/$1"
  },
  "preset": "ts-jest/presets/js-with-ts",
  "roots": ["<rootDir>", "<rootDir>/..", "<rootDir>/../src"],
  "moduleDirectories": ["node_modules", "<rootDir>/../src"]
}
